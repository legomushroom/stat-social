// BLOCKS
@import '../assets/imports.styl'

/* 98563fbea95348eb229352f8427d95a1 */
.footer-copyright-b
	color white
	font-size 15px
	font-weight 600

/* f934d17cc3f0e13f69feaa928d6fbd22 */
.footer-about-b
	color white
	font-size 16px
	> .header-be
		font-weight 700
		margin-bottom 12px

	> .item-be
		display block
		font-weight 100
		+ .item-be
			margin-top 4px

/* 18ec867773b0af97d00745d5be079931 */
.social-share-b
	display inline-block
	.icon
		rect 24px
		float left
		+ .icon
			margin-left 24px

/* 217c0a46b063374e01ce9556998a9325 */
.sidebar-menu-item-b
	&:first-of-type
		> .sidebar-menu-header-sub-b
			&:before
				box-shadow 0 -12px 0 white
			&.is-sub2, &.is-sub3
				&:before
					box-shadow 0 -6px 0 white

	&:last-of-type
		> .sidebar-menu-header-sub-b
			&:before
				height 50%

	&.is-open 
		> .content-bl
			display block

	> .content-bl
		display none

/* 7f2ec201ce0694f22a08f2e065c4b735 */
hightlightWidth = 4px
.sidebar-menu-header-b
	height 67px
	padding  12px 8px
	position relative
	padding-right hightlightWidth
	background rgba(c-blue1,.7)

	&:hover
		cursor pointer
		background rgba(c-blue1,.675)

	/* 89a64cab9779a3f80167d765346da7dc */
	&.is-check
		background-color rgba(c-blue1,.5) II

		> .text-bl
			color white

		> .icon-bl 
			border 2px solid white

	&:after
		content ''
		position absolute
		height 100%
		width  hightlightWidth
		top 0
		right 0

	/* 2c93e10d29f23bbaa0844ef81feb5a51 */
	&.is-green-mark--oncheck.is-check, &.is-green-mark--onhover:hover
		&:after
			background c-green
	
	/* 920b75c3286f0a753b6d5a2527f87848 */
	&.is-blue-mark--oncheck.is-check, &.is-blue-mark--onhover:hover
		&:after
			background c-blue4
	
	/* d1e432df9dd03b8786e08e00be1af00b */
	/* b037867e34073d50bc30c547ef697510 */
	&.is-red-mark--oncheck.is-check, &.is-red-mark--onhover:hover
		&:after
			background c-red
	
	/* 7895ef2ac47dc8930de8e801bf16631f */
	/* 94d4b3d2ffb0210adad361abff10ae9d */
	&.is-orange-mark--oncheck.is-check, &.is-orange-mark--onhover:hover
		&:after
			background c-orange

	> .icon-bl 
		float left
		border 2px solid transparent
		border-radius 50%
		padding 6px

		.icon
			rect 29px
			fill white

	> .text-bl
		margin-left 53px
		font-size 20px
		color #a8afb8
		margin-top 14px
		font-weight 300

/* d7a0268c5d178625cbdfa5d991e4d1c0 */
bgColor = #1e394f
.sidebar-menu-header-sub-b
	@extend .sidebar-menu-header-b
	padding-left 45px
	background-color bgColor
	position relative
	height 63px

	&.is-check
		&:before
			background-color white
		> .text-bl
			color white
		> .plus-minus-bh
			background-color white
			box-shadow 0 0 0 3px white
		> .minus-icon-bh
			display block
		> .icon-bl 
			// 4!
			.icon
				fill white

	blue1 = #4a6c82
	&:before
		content: ''
		width 3px
		height 100%
		top 0
		left 28px
		background-color blue1
		position absolute
		z-index 0

	&:hover
		background-color lighten(bgColor, 2)
	
	> .icon-bl 
		border 2px solid blue1

		.icon
			fill blue1

	> .text-bl
		color blue1

	> .plus-minus-bh
		rect 9px
		background-color blue1
		fill bgColor
		border-radius 50%
		box-shadow 0 0 0 3px blue1
		position absolute
		left 25px
		top 50%
		margin-top - 2px
		z-index 1

	> .minus-icon-bh
		display none

	/* d7a0268c5d178625cbdfa5d991e4d1c0 */
	&.is-sub2, &.is-sub3
		height 38px
		padding 8px 0
		
		&:before
			left 66px

		> .icon-bl 
			display none

		> .text-bl
			margin-left 83px
			margin-top 	3px
			font-size 16px
			
		> .plus-minus-bh
			left 63px
			margin-top - 5px

	/* f718f3c840abc57ca063892cf84b6aeb */
	&.is-sub3
		
		&.is-check
			> .plus-minus-bh
				box-shadow 0 0 0 1px white

		&:before
			left 104px

		> .text-bl
			margin-left 121px
			margin-top 1px
			
		> .plus-minus-bh
			left 101px
			box-shadow 0 0 0 1px blue1

			svg
				display none

/* b7fd66c98927030c63e5bc85e79603cf */
.tab-circle-b
	rect 75px
	border 1px solid white
	border-radius 50%
	text-align center
	color white
	background url('http://placekitten.com/75/75') no-repeat center center

	/* 91f28e51a4cffb32caebcda1cbff41fe */
	&.is-number
		background transparent
		rect 65px
		font-size 18px
		line-height 60px
		font-weight 600
		openSans()

/* 5e50955e8ae19f7e87c097ef0840e455 */
.header-tab-b
	height 93px
	overflow hidden
	position relative
	font-size 18px
	text-align center

	> .header-text-be, > .bottom-text-be
		position absolute
		width 100%

	> .header-text-be
		top 14px
		color #274057
		letter-spacing 0
		padding-left 66px
		font-weight 300
		ptSans()

	> .bottom-text-be
		color white
		bottom 12px
		font-weight 200
		padding-left 40px
		font-size 19px
	
	marginLeft = 11px
	.tab-circle-b
		float left
		margin-top 15px
		margin-left marginLeft
		position relative

		&:after, &:before
			content ''
			height 1px
			background white
			position absolute
			top 50%
			margin-top - 1px

		&:before
			left - marginLeft - 1px
			width  marginLeft

		&:after
			width 2000px
			left 100%

	> .cross-icon-bh
		rect 20px
		fill white
		position absolute
		right  14px
		bottom 8px

/* 766dfcc19fb177a6f7f8cca6aa9c33d5 */
.header-tab-user-b
	@extend .header-tab-b
	padding-left 0
	text-align left

	> .header-text-be
		color white
		font-weight 200
		padding-left 90px
	> .bottom-text-be
		padding-left 90px
		font-size 18px
		bottom 11px
		font-weight 100
		letter-spacing 0
		ptSans()

	.tab-circle-b
		margin-top 10px
		margin-left 9px

		&:before
			display none










	
