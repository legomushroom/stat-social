// BLOCKS
@import '../assets/imports.styl'

/* 7f2ec201ce0694f22a08f2e065c4b735 */
hightlightWidth = 4px
.sidebar-menu-item-b
	height 67px
	padding  12px 8px
	position relative
	padding-right hightlightWidth

	&:hover
		cursor pointer
		background-color rgba(255,255,255,.05)
		

	/* 89a64cab9779a3f80167d765346da7dc */
	&.is-check
		background-color rgba(255,255,255,.05)
		&:hover
			cursor default

		> .icon-bl 
			border 2px solid white

	&:after
		content ''
		position absolute
		height 100%
		width  hightlightWidth
		top 0
		right 0

	/* 2c93e10d29f23bbaa0844ef81feb5a51 */
	&.is-green-mark--oncheck.is-check, &.is-green-mark--onhover:hover
		&:after
			background c-green
	
	/* 920b75c3286f0a753b6d5a2527f87848 */
	&.is-blue-mark--oncheck.is-check, &.is-blue-mark--onhover:hover
		&:after
			background c-blue4
	
	/* d1e432df9dd03b8786e08e00be1af00b */
	/* b037867e34073d50bc30c547ef697510 */
	&.is-red-mark--oncheck.is-check, &.is-red-mark--onhover:hover
		&:after
			background c-red
	
	/* 7895ef2ac47dc8930de8e801bf16631f */
	/* 94d4b3d2ffb0210adad361abff10ae9d */
	&.is-orange-mark--oncheck.is-check, &.is-orange-mark--onhover:hover
		&:after
			background c-orange

	> .icon-bl 
		float left
		border 2px solid transparent
		border-radius 50%
		padding 6px

		.icon
			rect 29px
			fill white

	> .text-bl
		margin-left 53px
		font-size 20px
		color #a8afb8
		margin-top 14px
		font-weight 300

/* d7a0268c5d178625cbdfa5d991e4d1c0 */
.sidebar-menu-item-sub-b
	@extend .sidebar-menu-item-b
	padding-left 45px
	background-color #1e394f

	&:hover
		background-color darken(#1e394f, 5)
	
	blue1 = #48667f
	> .icon-bl 
		border 2px solid blue1

		.icon
			fill blue1

	> .text-bl
		color blue1

	> .cross-icon-bh
		rect 14px
		


	

/* b7fd66c98927030c63e5bc85e79603cf */
.tab-circle-b
	rect 75px
	border 1px solid white
	border-radius 50%
	text-align center
	color white
	background url('http://lorempixel.com/75/75/people') no-repeat center center

	/* 91f28e51a4cffb32caebcda1cbff41fe */
	&.is-number
		background transparent
		rect 65px
		font-size 18px
		line-height 60px
		font-weight 600
		openSans()


/* 5e50955e8ae19f7e87c097ef0840e455 */
.header-tab-b
	height 93px
	overflow hidden
	position relative
	font-size 18px
	text-align center

	> .header-text-be, > .bottom-text-be
		position absolute
		width 100%

	> .header-text-be
		top 12px
		color #274057
		letter-spacing 0
		padding-left 66px
		font-weight 300

	> .bottom-text-be
		color white
		bottom 12px
		font-weight 200
		padding-left 40px
		font-size 19px
		openSans()

	marginLeft = 11px
	.tab-circle-b
		float left
		margin-top 15px
		margin-left marginLeft
		position relative

		&:after, &:before
			content ''
			height 1px 
			background white
			position absolute
			top 50%
			margin-top - 1px

		&:before
			left - marginLeft - 1px
			width  marginLeft

		&:after
			width 2000px
			left 100%

	> .cross-icon-bh
		rect 20px
		fill white
		position absolute
		right  14px
		bottom 8px
