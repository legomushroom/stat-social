/* 1cbc1220e27421d2e68a567e40c562c6 */
.filter-l
	display inline-block
	
	.filter-input-e, .filter-input-btn-e
		display inline-block
		vertical-align top
		white-space nowrap
	
	.filter-input-e
		margin-right -5px
		width 0
		crossTransition all .17s ease-out

		&:focus
			width 190px
			
			// 4!
			+ .filter-input-btn-e
				width 62px
				padding-left 16px



